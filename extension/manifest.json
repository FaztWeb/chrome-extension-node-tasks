{
  "name": "Tasks App",
  "description": "extension para guardar tareas!",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/images/task.png"
    }
  },
  "options_page": "options.html"
}
